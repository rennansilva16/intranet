@model Intranet.Models.Participante

<form method="post" action="/Contato/Editar">
    <input type="hidden" name="Id" value="@Model.Id" />

    <label>Nome:</label>
    <input type="text" name="Nome" value="@Model.Nome" required />

    <label>Email:</label>
    <input type="email" name="Email" value="@Model.Email" required />

    <label>Telefone:</label>
    <input type="text" name="Telefone" value="@Model.Telefone" />

    <label>Celular:</label>
    <input type="text" name="Celular" value="@Model.Celular" required />

    <label>Data de Nascimento:</label>
    <input type="date" name="DataNascimento" value="@Model.DataNascimento.ToString("yyyy-MM-dd")" required />

    <label>Divisão:</label>
    <input type="text" name="Divisao" value="@Model.Divisao" required />

    <button type="submit">Salvar</button>
</form>



