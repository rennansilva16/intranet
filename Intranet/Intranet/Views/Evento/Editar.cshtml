@model Intranet.Models.EventoModel

<h2>Editar Evento</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <label for="Titulo">Título</label>
    <input type="text" class="form-control" asp-for="Titulo" />

    <label for="DataInicio">Data Início</label>
    <input type="date" class="form-control" asp-for="DataInicio" />

    <label for="DataFim">Data Fim</label>
    <input type="date" class="form-control" asp-for="DataFim" />

    <label for="ParticipanteId">Participante</label>
    <input type="number" class="form-control" asp-for="ParticipanteId" />

    <button type="submit" class="btn btn-success">Salvar</button>
</form>
