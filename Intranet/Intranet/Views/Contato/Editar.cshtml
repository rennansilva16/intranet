@model ContatoModel

@{
	ViewData["Title"] = "Editar Contato";
}
<div>
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h1>Editar Contato</h1>
	</div>
	<form asp-controller="Contato" asp-action="Editar" method="post">
		<input type="hidden" asp-for="Id" />
		<div class="form-group">
			<label for="divisao">Divisão</label>
			<select asp-for="Divisao" class="form-control" id="divisao">
				<option value="TI">TI</option>
				<option value="Sigilo">Sigilo</option>
				<option value="RH">RH</option>
			</select>
		</div>
		<div class="form-group">
			<label for="nome">Nome</label>
			<input type="text" asp-for="Nome" class="form-control" id="nome" placeholder="Nome">
		</div>
		<div class="form-group">
			<label for="ramal">Ramal</label>
			<input type="text" asp-for="Telefone" class="form-control" id="ramal" placeholder="Ramal">
		</div>
		<div class="form-group">
			<label for="email">E-mail</label>
			<input type="email" asp-for="Email" class="form-control" id="email" placeholder="E-mail">
		</div>
		<div class="form-group">
			<label for="celular">Celular</label>
			<input type="text" asp-for="Celular" class="form-control" id="celular" placeholder="Celular">
		</div>
		<div class="form-group">
			<label for="aniversario">Aniversário</label>
			<input type="date" asp-for="Aniversario" class="form-control" id="aniversario" placeholder="Aniversário">
		</div>
		<button type="submit" class="btn btn-primary d-block w-100 mb-2">Editar</button>
		<a asp-controller="Home" asp-action="Index" class="btn btn-secondary d-block w-100">Voltar</a>
	</form>
</div>